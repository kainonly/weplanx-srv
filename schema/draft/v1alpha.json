{
  "$schema": "http://json-schema.org/draft-07/schema",
  "type": "object",
  "properties": {
    "contents": {
      "type": "array",
      "items": {
        "$ref": "#/definitions/page"
      }
    }
  },
  "definitions": {
    "page": {
      "type": "object",
      "properties": {
        "name": {
          "type": "string",
          "description": "显示名称"
        },
        "icon": {
          "type": "string",
          "description": "字体图标"
        },
        "kind": {
          "type": "string",
          "description": "种类",
          "enum": ["default", "aggregation", "group"]
        },
        "manifest": {
          "type": "string",
          "description": "形式",
          "enum": ["default", "tree", "form", "hide", "dashboard"]
        },
        "schema": {
          "$ref": "#/definitions/schema"
        },
        "source": {
          "$ref": "#/definitions/source"
        },
        "sort": {
          "type": "integer",
          "default": 0,
          "description": "排序"
        },
        "children": {
          "type": "array",
          "items": {
            "$ref": "#/definitions/page"
          }
        }
      },
      "required": ["name", "kind"]
    },
    "schema": {
      "type": "object",
      "properties": {
        "key": {
          "type": "string",
          "description": "命名"
        },
        "fields": {
          "type": "array",
          "description": "字段定义",
          "items": {
            "$ref": "#/definitions/field"
          }
        },
        "rules": {
          "type": "array",
          "description": "显隐规则",
          "items": {
            "$ref": "#/definitions/rule"
          }
        },
        "event": {
          "type": "boolean",
          "description": "启用事务补偿",
          "default": false
        }
      },
      "description": "数据 Schema 定义",
      "required": ["key", "fields"]
    },
    "field": {
      "type": "object",
      "properties": {
        "label": {
          "type": "string",
          "description": "显示名称"
        },
        "type": {
          "type": "string",
          "enum": [
            "string",
            "text",
            "number",
            "date",
            "dates",
            "bool",
            "radio",
            "checkbox",
            "select",
            "ref",
            "richtext",
            "picture",
            "video",
            "file",
            "location"
          ],
          "description": "字段类型"
        },
        "description": {
          "type": "string",
          "description": "字段描述"
        },
        "placeholder": {
          "type": "string",
          "description": "字段提示"
        },
        "default": {
          "description": "默认值"
        },
        "required": {
          "type": "boolean",
          "description": "是否必须"
        },
        "hide": {
          "type": "boolean",
          "description": "隐藏字段"
        },
        "readonly": {
          "type": "boolean",
          "description": "表单只读"
        },
        "projection": {
          "type": "integer",
          "enum": [0, 1, 2],
          "description": "0:排除 1:包含 2:包含并脱敏"
        },
        "sort": {
          "type": "integer",
          "description": "排序",
          "default": 0
        },
        "option": {
          "$ref": "#/definitions/option"
        }
      },
      "required": ["key", "label", "type", "option"]
    },
    "option": {
      "type": "object",
      "properties": {
        "max": {
          "type": "integer",
          "description": "最大值"
        },
        "min": {
          "type": "integer",
          "description": "最小值"
        },
        "decimal": {
          "type": "integer",
          "description": "保留小数"
        },
        "value": {
          "type": "array",
          "items": {
            "$ref": "#/definitions/value"
          },
          "description": "枚举数值"
        },
        "reference": {
          "type": "string",
          "description": "引用数据源"
        },
        "target": {
          "type": "string",
          "description": "引用目标"
        },
        "multiple": {
          "type": "boolean",
          "description": "是否多选"
        }
      }
    },
    "value": {
      "type": "object",
      "properties": {
        "label": {
          "type": "string",
          "description": "名称"
        },
        "value": {
          "description": "数值"
        }
      },
      "required": ["label", "value"]
    },
    "rule": {
      "type": "object",
      "description": "规则",
      "properties": {
        "logic": {
          "type": "string",
          "enum": ["and", "or"],
          "description": "and:满足所有 or:满足任一"
        },
        "conditions": {
          "type": "array",
          "description": "条件",
          "items": {
            "$ref": "#/definitions/condition"
          }
        }
      }
    },
    "condition": {
      "type": "object",
      "properties": {
        "field": {
          "type": "string",
          "description": "字段"
        },
        "operate": {
          "type": "string",
          "enum": ["eq", "neq", "in", "nin"],
          "description": "操作符"
        },
        "value": {
          "description": "数值"
        }
      }
    },
    "source": {
      "type": "object",
      "properties": {
        "layout": {
          "type": "string"
        },
        "panels": {
          "type": "object",
          "properties": {
            "query": {
              "type": "string",
              "enum": ["default", "flux"]
            },
            "mappings": {
              "type": "string"
            },
            "style": {
              "type": "string"
            }
          }
        }
      }
    }
  },
  "required": ["contents"]
}
